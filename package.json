{
  "name": "backend",
  "version": "1.0.0",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn src/index.ts",
    "test": "jest --runInBand",
    "test:integration": "jest --config jest.integration.config.js --runInBand",
    "migrate:latest": "node-pg-migrate up",
    "migrate:down": "node-pg-migrate down",
    "migrate:create": "node-pg-migrate create",
    "migrate:reset": "node-pg-migrate reset",
    "db:seed": "psql \"$DATABASE_URL\" -f ./backend/seeds/seed_users.sql || true",
    "build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.0",
    "pg": "^8.10.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.2.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongoose": "^5.11.96",
    "@types/supertest": "^2.0.12",
    "jest": "^29.4.0",
    "mongodb-memory-server": "^8.12.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.0",
    "node-pg-migrate": "^7.0.0"
  }
}
